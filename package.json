{
  "name": "taller-platform",
  "version": "1.0.0",
  "description": "Plataforma web para taller mec√°nico - solicitudes de proveedores",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "deploy": "./scripts/deploy.sh",
    "backup": "./scripts/backup.sh",
    "migrate": "node migrate-passwords.js",
    "reset-passwords": "node reset-passwords.js",
    "security-audit": "npm audit && npm audit fix",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop taller-platform",
    "pm2:restart": "pm2 restart taller-platform",
    "docker:build": "docker build -t taller-platform .",
    "docker:run": "docker run -d --name taller-app -p 3000:3000 --env-file .env.production taller-platform"
  },
  "dependencies": {
    "express": "^4.18.2",
